<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>

    <%- include('./partials/nav') %>

    <div class="blogs content">
        <h2>All blogs</h2>
        <!-- Some dummy data for now -->

        <% if(blogs.length > 0){ %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"> <%= blog.title %> </h3>
                <p class="snippet"> <%= blog.snippet %> </p>
            <% }) %>
        <% }else{ %>
            <p>No blogs to show</p>
        <% }%>

    </div>
    
    <%- include('./partials/footer') %>
</body>
</html>